{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.jarvis.app",
  "productName": "JARVIS",
  "version": "1.0.0",
  "build": {
    "frontendDist": "../src",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "J.A.R.V.I.S.",
        "width": 500,
        "height": 500,
        "minWidth": 300,
        "minHeight": 300,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": false,
        "center": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": true
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/icon.ico"
    ],
    "targets": "all"
  }
}
